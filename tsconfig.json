{
  "compilerOptions": {
    /* Base Options */
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,

    /* Project Structure */
    "rootDir": "src",
    "outDir": "dist",
    
    /* Performance */
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}